<div id="layoutSidenav_content">

    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h2 mb-5 mt-5 text-gray-800 text-center">ORDERS</h1>



        <div class="card shadow mb-4">

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Delivery Address</th>
                                <th>Ordered on</th>
                                <th>Price</th>

                                <th>Payment status</th>
                                <th>View</th>

                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>ProductId</th>
                                <th>Title</th>
                                <th>Category</th>


                                <th>View</th>

                                <th>Delete</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            {{#each orders}}

                            <tr>
                                <td>
                                    <p class="m-0 fw-bolder"> UserId:{{this._id}}</p>
                                    <p class="m-0">{{this.firstname}}</p>
                                    <p class="m-0">
                                        {{this.orders.deliveryDetails.house}},{{this.orders.deliveryDetails.city}}</p>
                                    <p class="m-0">
                                        {{this.orders.deliveryDetails.state}},{{this.orders.deliveryDetails.pincode}}
                                    </p>
                                    <p class="m-0">{{this.orders.deliveryDetails.mobile}}</p>
                                </td>
                                <td>{{this.orders.time}}</td>
                                <td> Rs.{{this.orders.totalAmount}} </td>

                                <td>{{this.orders.status}}</td>
                                <td><a href="/admin/vendorOrderDetails/{{this.orders.orderId}}" class="">
                                        <p class="text-primary fw-bold">VIEW</p>
                                    </a></td>
                                <td><a href="/vendor/home/viewproducts/delete/{{this.products._id}}" class=""
                                        onclick="return confirm('Are you sure,you want to delete {{this.firstname}}?')">
                                        <p class="text-danger fw-bold">DELETE</p>
                                    </a></td>

                            </tr>

                            {{/each}}

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container-fluid -->
<footer class="py-4 bg-light mt-auto">
        <div class="container-fluid px-4">
            <div class="d-flex align-items-center justify-content-between small">
                <div class="text-muted">Copyright &copy; Heel2toe</div>
                
            </div>
        </div>
    </footer>
</div>
